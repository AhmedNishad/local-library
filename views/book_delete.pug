extends layout

block content
    h1 #{title}

    if book_instances.length
        p #[strong Delete the following book instances before deleting the book]

        div(style='margin-left:20px;margin-top:20px')

            h4 Book Instances

            ul
            each book_instance in book_instances

                li
                    a(href=book_instance.url) #{book_instance.title}

    else

        h3 Do you really want to delete this book?

        form(method="post" action="")
            div.form-group
                input#bookid.form-control(type='hidden', name='bookid', required='true', value=book.id)

            button.btn.btn-primary(type='submit') Delete